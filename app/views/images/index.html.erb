<p id="notice"><%= notice %></p>

<h1>Images</h1>

<p class="tag-filters">
  Filter by tag:
  <%= link_to 'All', images_path %>
  <% @tag_filters.each do |tag| %>
    | <%= link_to tag, images_path(tag: tag) %>
  <% end %>
</p>

<div class="image-list">
  <% @images.each do |image| %>
    <a href="<%= image_path(image) %>"><img src="<%= image.url %>" alt="<%= image.url %>"></a>
  <% end %>
</div>

<br>

<%= link_to 'New Image', new_image_path %>
